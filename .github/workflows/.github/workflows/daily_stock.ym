name: Daily Stock Summary
on:
  workflow_dispatch:
  schedule:
    - cron: '0 3 * * *'

jobs:
  run-agent:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      # ขั้นตอนนี้จะล้างเวอร์ชัน 0.8.6 และลงเวอร์ชันใหม่ล่าสุดครับ
      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.10'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install --no-cache-dir google-generativeai==0.11.2 yfinance requests

      - name: Run stock analysis
        env:
          GEMINI_API_KEY: ${{ secrets.GEMINI_API_KEY }}
          LINE_TOKEN: ${{ secrets.LINE_TOKEN }}
        run: python stock_bot.py
